<section class="projectlist">
  {% for project in projects | reverse %}
  <article class="projectlist__item">
    <h2 class="projectlist__title">
      <a class="projectlist__link" href="{{ project.url }}">{{ project.data.title }}</a>
    </h2>

    <div class="projectlist__meta">
      <time class="projectlist__date" datetime="{{ project.date | formatISO }}">
        {{ project.date | format('LLL yyyy') }}
      </time>
      {% if project.data.tags %}<span class="tags">{% for tag in project.data.tags %}<a href="/projects/{{ tag }}" class="tag">{{ tag }}</a>{% endfor %}</span>
      {% endif %}
    </div>

    {% if project.data.description %}
    <p class="projectlist__excerpt">
      {{ project.data.description }}
    </p>
    {% endif %}
    <p><a href="{{ project.url }}">Read â†’</a></p>
  </article>
  {% endfor %}
</section>
